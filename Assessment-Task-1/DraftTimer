continueinput = input('Enter something in to start the timer: ')
while continueinput != 'exit':
    start_time = time.time()
    input('Finish Timer: ')
    end_time = time.time()
    total_time = end_time - start_time
    #print(round(total_time,2), 'seconds')
    print(total_time, 'seconds')
    print('')
    continueinput = input('Start Timer: ')